<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF1E3A5F"
    tools:context=".ui.ModeSelectionActivity">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_arrow_back_24"
        android:contentDescription="Back"
        app:tint="@android:color/black" />

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_face_24" />


    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/txtTitleMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What do you want to plan?"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtSubtitleMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Choose the type of studies"
            android:textSize="14sp"
            android:textColor="#B3FFFFFF" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <Button
            android:id="@+id/btnErasmusMode"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="#FF4CAF50"
            android:text="Erasmus mobility"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@android:color/white" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/btnMasterMode"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="#FF03A9F4"
            android:text="Master"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>
